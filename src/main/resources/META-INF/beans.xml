<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="https://jakarta.ee/xml/ns/cdi"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="https://jakarta.ee/xml/ns/cdi 
       https://jakarta.ee/xml/ns/cdi/beans_4_0.xsd"
       version="4.0" 
       bean-discovery-mode="annotated">
    
    <!-- Enable interceptors globally -->
    <interceptors>
        <class>com.bank.interceptor.LoggingInterceptor</class>
        <class>com.bank.interceptor.AuditInterceptor</class>
    </interceptors>
    
    <!-- Alternative configurations can be placed here -->
    <alternatives>
        <!-- Add alternative implementations here if needed -->
    </alternatives>
    
    <!-- Decorators can be configured here -->
    <decorators>
        <!-- Add decorators here if needed -->
    </decorators>
</beans> 